@model FreelanceJobBoard.Presentation.Models.ViewModels.CategoryViewModel

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    @(Model.IsActive ? "Deactivate" : "Activate") Category
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to @(Model.IsActive ? "deactivate" : "activate") the category "<strong>@Model.Name</strong>"?</p>
                @if (Model.IsActive)
                {
                    <div class="alert alert-warning">
                        <i class="ki-duotone ki-warning-2 fs-2 me-2">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                        </i>
                        <strong>Note:</strong> Deactivating this category will make it unavailable for new jobs, 
                        but existing job associations will remain intact.
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="ki-duotone ki-information-4 fs-2 me-2">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                        </i>
                        <strong>Note:</strong> Activating this category will make it available for use in new jobs.
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-@(Model.IsActive ? "danger" : "success")">
                        <i class="ki-duotone ki-@(Model.IsActive ? "cross" : "check") fs-4 me-1"></i>
                        @(Model.IsActive ? "Deactivate" : "Activate") Category
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Show the modal immediately when loaded
    $(document).ready(function() {
        $('#confirmDeleteModal').modal('show');
    });
</script>