@model FreelanceJobBoard.Presentation.Models.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">@Model.Name</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a asp-action="Index" class="text-muted text-hover-primary">Categories</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Details</li>
                </ul>
            </div>
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm fw-bold btn-light-primary">
                    <i class="ki-duotone ki-pencil fs-4"></i>
                    Edit Category
                </a>
            </div>
        </div>
    </div>
    <!--end::Toolbar-->

    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-fluid">
            
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <!-- Category Details -->
                <div class="col-xl-8">
                    <div class="card mb-8">
                        <div class="card-header">
                            <div class="card-title">
                                <h3 class="fw-bold text-dark">Category Information</h3>
                            </div>
                            <div class="card-toolbar">
                                <span class="badge badge-light-@(Model.IsActive ? "success" : "danger") fs-7 fw-bold">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-8">
                                <h4 class="fs-5 fw-bold text-gray-900 mb-3">Category Name</h4>
                                <div class="text-gray-700 fs-6">
                                    @Model.Name
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="mb-8">
                                    <h4 class="fs-5 fw-bold text-gray-900 mb-3">Description</h4>
                                    <div class="text-gray-700 fs-6">
                                        @Html.Raw(Model.Description?.Replace("\n", "<br>"))
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="mb-8">
                                    <h4 class="fs-5 fw-bold text-gray-900 mb-3">Description</h4>
                                    <div class="text-gray-400 fs-6 fst-italic">
                                        No description provided
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Category Summary -->
                <div class="col-xl-4">
                    <div class="card mb-8">
                        <div class="card-header">
                            <div class="card-title">
                                <h3 class="fw-bold text-dark">Category Summary</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-stack mb-5">
                                <span class="text-gray-700 fw-bold fs-6">Category ID:</span>
                                <span class="text-dark fw-bold fs-6">#@Model.Id</span>
                            </div>
                            
                            <div class="d-flex flex-stack mb-5">
                                <span class="text-gray-700 fw-bold fs-6">Status:</span>
                                <span class="badge badge-light-@(Model.IsActive ? "success" : "danger")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>

                            <div class="d-flex flex-stack mb-5">
                                <span class="text-gray-700 fw-bold fs-6">Has Description:</span>
                                <span class="badge badge-light-@(string.IsNullOrEmpty(Model.Description) ? "warning" : "info")">
                                    @(string.IsNullOrEmpty(Model.Description) ? "No" : "Yes")
                                </span>
                            </div>

                            <div class="separator my-5"></div>

                            <div class="d-flex flex-column gap-3">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                                    <i class="ki-duotone ki-pencil fs-4 me-1"></i>
                                    Edit Category
                                </a>
                                
                                <button type="button" class="btn btn-light-@(Model.IsActive ? "danger" : "success") btn-sm" data-bs-toggle="modal" data-bs-target="#statusModal">
                                    <i class="ki-duotone ki-@(Model.IsActive ? "cross" : "check") fs-4 me-1"></i>
                                    @(Model.IsActive ? "Deactivate" : "Activate") Category
                                </button>

                                <a asp-action="Index" class="btn btn-light-secondary btn-sm">
                                    <i class="ki-duotone ki-arrow-left fs-4 me-1"></i>
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Content-->
</div>

<!-- Status Change Confirmation Modal -->
<div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">
                    @(Model.IsActive ? "Deactivate" : "Activate") Category
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to @(Model.IsActive ? "deactivate" : "activate") the category "<strong>@Model.Name</strong>"?</p>
                @if (Model.IsActive)
                {
                    <div class="alert alert-warning">
                        <strong>Note:</strong> Deactivating this category will make it unavailable for new jobs, 
                        but existing job associations will remain intact.
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <strong>Note:</strong> Activating this category will make it available for use in new jobs.
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-@(Model.IsActive ? "danger" : "success")">
                        @(Model.IsActive ? "Deactivate" : "Activate") Category
                    </button>
                </form>
            </div>
        </div>
    </div>
}