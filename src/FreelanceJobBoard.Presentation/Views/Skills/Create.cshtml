@model FreelanceJobBoard.Presentation.Models.ViewModels.CreateSkillViewModel
@{
    ViewData["Title"] = "Create Skill";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Create Skill</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a asp-action="Index" class="text-muted text-hover-primary">Skills</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Create</li>
                </ul>
            </div>
        </div>
    </div>
    <!--end::Toolbar-->

    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-fluid">
            <div class="row">
                <div class="col-xl-8 offset-xl-2">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title fs-3 fw-bold">Skill Information</div>
                        </div>
                        <div class="card-body">
                            <form asp-action="Create" method="post" novalidate>
                                <div class="row mb-8">
                                    <div class="col-xl-12">
                                        <div class="fv-row mb-8">
                                            <label asp-for="Name" class="fs-6 fw-semibold mb-2">Skill Name</label>
                                            <input asp-for="Name" class="form-control form-control-solid" placeholder="Enter skill name (e.g., JavaScript, Python, UI/UX Design)" />
                                            <span asp-validation-for="Name" class="text-danger fs-7"></span>
                                            <div class="form-text">Enter a clear and descriptive skill name that freelancers and clients can easily understand.</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-end">
                                    <a asp-action="Index" class="btn btn-light me-3">Cancel</a>
                                    <button type="submit" class="btn btn-primary">
                                        <span class="indicator-label">Create Skill</span>
                                        <span class="indicator-progress">Please wait...
                                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                        </span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Popular Skills Suggestions -->
                    <div class="card mt-5">
                        <div class="card-header">
                            <div class="card-title fs-5 fw-bold">Popular Skills Suggestions</div>
                        </div>
                        <div class="card-body">
                            <p class="text-gray-600 mb-5">Here are some popular skills you might want to add:</p>
                            <div class="d-flex flex-wrap gap-2">
                                <span class="badge badge-light-primary skill-suggestion" data-skill="JavaScript">JavaScript</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="Python">Python</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="React">React</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="Node.js">Node.js</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="UI/UX Design">UI/UX Design</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="PHP">PHP</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="Laravel">Laravel</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="WordPress">WordPress</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="Graphic Design">Graphic Design</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="Mobile App Development">Mobile App Development</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="SEO">SEO</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="Content Writing">Content Writing</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="Digital Marketing">Digital Marketing</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="Data Analysis">Data Analysis</span>
                                <span class="badge badge-light-primary skill-suggestion" data-skill="Machine Learning">Machine Learning</span>
                            </div>
                            <div class="form-text mt-3">Click on any skill to auto-fill the form</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Content-->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Form submission with loading state
            $('form').on('submit', function() {
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.attr('disabled', true);
                submitBtn.find('.indicator-label').hide();
                submitBtn.find('.indicator-progress').show();
            });

            // Skill suggestion click handler
            $('.skill-suggestion').on('click', function() {
                const skillName = $(this).data('skill');
                $('#Name').val(skillName);
                $(this).removeClass('badge-light-primary').addClass('badge-success');
                
                // Reset other suggestions
                $('.skill-suggestion').not(this).removeClass('badge-success').addClass('badge-light-primary');
            });

            // Auto-focus on skill name input
            $('#Name').focus();
        });
    </script>
}