@model FreelancerRegisterViewModel
@{
    ViewData["Title"] = "Freelancer Registration";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex flex-column flex-root" id="kt_app_root">
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <div class="d-flex flex-lg-row-fluid">
            <div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-10 w-100">
                <img class="theme-light-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="~/images/misc/auth-screens.png" alt="" />
                <img class="theme-dark-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="~/images/misc/auth-screens-dark.png" alt="" />
                <h1 class="text-gray-800 fs-2qx fw-bold text-center mb-7">Join as a Freelancer</h1>
                <div class="text-gray-600 fs-base text-center fw-semibold">
                    Find great projects, showcase your skills, and grow your business
                </div>
            </div>
        </div>
        <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
            <div class="bg-body d-flex flex-column flex-center rounded-4 w-md-700px p-10">
                <div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-600px">
                    <div class="d-flex flex-center flex-column flex-column-fluid pb-15 pb-lg-20">
                        <form asp-action="FreelancerRegister" method="post" enctype="multipart/form-data" class="form w-100" novalidate="novalidate">
                            <div class="text-center mb-11">
                                <h1 class="text-dark fw-bolder mb-3">Freelancer Registration</h1>
                                <div class="text-gray-500 fw-semibold fs-6">Create your professional freelancer profile</div>
                            </div>

                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    @TempData["Success"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Personal Information -->
                            <div class="separator separator-content my-8">
                                <span class="w-200px text-gray-500 fw-semibold fs-7">Personal Information</span>
                            </div>

                            <div class="row g-3 mb-8">
                                <div class="col-md-6">
                                    <input asp-for="FullName" type="text" placeholder="Full Name" class="form-control bg-transparent" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Email" type="email" placeholder="Email Address" class="form-control bg-transparent" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="fv-row mb-8">
                                <input asp-for="PhoneNumber" type="tel" placeholder="Phone Number" class="form-control bg-transparent" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <!-- Profile Photo -->
                            <div class="fv-row mb-8">
                                <label asp-for="ProfilePhoto" class="form-label fw-semibold">Profile Photo</label>
                                <input asp-for="ProfilePhoto" type="file" accept="image/*" class="form-control bg-transparent" />
                                <div class="form-text">Upload a professional photo (JPG, PNG, max 5MB)</div>
                                <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                            </div>

                            <!-- Professional Information -->
                            <div class="separator separator-content my-8">
                                <span class="w-200px text-gray-500 fw-semibold fs-7">Professional Information</span>
                            </div>

                            <div class="fv-row mb-8">
                                <textarea asp-for="Bio" placeholder="Professional Bio - Tell clients about your skills, experience, and what makes you unique" class="form-control bg-transparent" rows="4"></textarea>
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>

                            <div class="row g-3 mb-8">
                                <div class="col-md-6">
                                    <input asp-for="YearsOfExperience" type="number" placeholder="Years of Experience" class="form-control bg-transparent" min="0" max="50" />
                                    <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="HourlyRate" type="number" placeholder="Hourly Rate ($)" class="form-control bg-transparent" min="1" max="10000" step="0.01" />
                                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="fv-row mb-8">
                                <select asp-for="Specialization" class="form-select bg-transparent">
                                    <option value="">Select Primary Specialization</option>
                                    <option value="Web Development">Web Development</option>
                                    <option value="Mobile Development">Mobile Development</option>
                                    <option value="UI/UX Design">UI/UX Design</option>
                                    <option value="Graphic Design">Graphic Design</option>
                                    <option value="Content Writing">Content Writing</option>
                                    <option value="Digital Marketing">Digital Marketing</option>
                                    <option value="Data Science">Data Science</option>
                                    <option value="DevOps">DevOps</option>
                                    <option value="Video Editing">Video Editing</option>
                                    <option value="Translation">Translation</option>
                                    <option value="Virtual Assistant">Virtual Assistant</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Specialization" class="text-danger"></span>
                            </div>

                            <!-- Portfolio & Links -->
                            <div class="separator separator-content my-8">
                                <span class="w-200px text-gray-500 fw-semibold fs-7">Portfolio & Social Links</span>
                            </div>

                            <div class="fv-row mb-8">
                                <input asp-for="PortfolioUrl" type="url" placeholder="Portfolio Website (Optional)" class="form-control bg-transparent" />
                                <span asp-validation-for="PortfolioUrl" class="text-danger"></span>
                            </div>

                            <div class="row g-3 mb-8">
                                <div class="col-md-6">
                                    <input asp-for="LinkedInUrl" type="url" placeholder="LinkedIn Profile (Optional)" class="form-control bg-transparent" />
                                    <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="GitHubUrl" type="url" placeholder="GitHub Profile (Optional)" class="form-control bg-transparent" />
                                    <span asp-validation-for="GitHubUrl" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Account Security -->
                            <div class="separator separator-content my-8">
                                <span class="w-200px text-gray-500 fw-semibold fs-7">Account Security</span>
                            </div>

                            <div class="fv-row mb-8" data-kt-password-meter="true">
                                <div class="mb-1">
                                    <div class="position-relative mb-3">
                                        <input asp-for="Password" type="password" placeholder="Password" autocomplete="new-password" class="form-control bg-transparent" />
                                        <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                                            <i class="bi bi-eye-slash fs-2"></i>
                                            <i class="bi bi-eye fs-2 d-none"></i>
                                        </span>
                                    </div>
                                    <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                                    </div>
                                </div>
                                <div class="text-muted">Use 6 or more characters with a mix of letters, numbers & symbols.</div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="fv-row mb-8">
                                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" autocomplete="new-password" class="form-control bg-transparent" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <!-- Availability -->
                            <div class="fv-row mb-8">
                                <div class="form-check">
                                    <input asp-for="IsAvailable" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsAvailable" class="form-check-label fw-semibold">
                                        I am available for new projects
                                    </label>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid mb-10">
                                <button type="submit" class="btn btn-primary">
                                    <span class="indicator-label">Register as Freelancer</span>
                                    <span class="indicator-progress">Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                            </div>

                            <!-- Login Link -->
                            <div class="text-gray-500 text-center fw-semibold fs-6">
                                Already have an account?
                                <a asp-action="Login" class="link-primary">Sign in</a>
                            </div>
                            
                            <div class="text-gray-500 text-center fw-semibold fs-6 mt-3">
                                Looking to hire talent?
                                <a asp-action="Register" class="link-primary">Register as Client</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Form submission loading state
            $('form').on('submit', function() {
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.attr('disabled', true);
                submitBtn.find('.indicator-label').hide();
                submitBtn.find('.indicator-progress').show();
            });

            // Password visibility toggle
            $('[data-kt-password-meter-control="visibility"]').on('click', function() {
                const input = $(this).parent().find('input');
                const icon1 = $(this).find('.bi-eye-slash');
                const icon2 = $(this).find('.bi-eye');
                
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon1.addClass('d-none');
                    icon2.removeClass('d-none');
                } else {
                    input.attr('type', 'password');
                    icon1.removeClass('d-none');
                    icon2.addClass('d-none');
                }
            });

            // Profile photo preview
            $('input[type="file"]').on('change', function() {
                const file = this.files[0];
                const fileInput = $(this);
                
                if (file) {
                    // Validate file size (5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('File size must be less than 5MB');
                        this.value = '';
                        removePreview(fileInput);
                        return;
                    }
                    
                    // Validate file type
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                    if (!allowedTypes.includes(file.type)) {
                        alert('Please select a valid image file (JPG, PNG, GIF)');
                        this.value = '';
                        removePreview(fileInput);
                        return;
                    }
                    
                    // Show preview
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        showPreview(fileInput, e.target.result, file.name);
                    };
                    reader.readAsDataURL(file);
                } else {
                    removePreview(fileInput);
                }
            });
            
            // Helper function to show image preview
            function showPreview(fileInput, imageSrc, fileName) {
                const previewId = 'preview_' + fileInput.attr('id');
                let previewContainer = $('#' + previewId);
                
                if (previewContainer.length === 0) {
                    previewContainer = $(`
                        <div id="${previewId}" class="mt-3">
                            <div class="d-flex align-items-center">
                                <img class="preview-image rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                                <div class="ms-3">
                                    <div class="fw-bold text-gray-800 fs-6 preview-filename"></div>
                                    <div class="text-muted fs-7">Image preview</div>
                                </div>
                                <button type="button" class="btn btn-sm btn-light-danger ms-auto remove-preview">
                                    <i class="ki-duotone ki-cross fs-4">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                </button>
                            </div>
                        </div>
                    `);
                    fileInput.parent().append(previewContainer);
                    
                    // Handle remove preview
                    previewContainer.find('.remove-preview').on('click', function() {
                        fileInput.val('');
                        removePreview(fileInput);
                    });
                }
                
                previewContainer.find('.preview-image').attr('src', imageSrc);
                previewContainer.find('.preview-filename').text(fileName);
                previewContainer.show();
            }
            
            // Helper function to remove image preview
            function removePreview(fileInput) {
                const previewId = 'preview_' + fileInput.attr('id');
                $('#' + previewId).remove();
            }
        });
    </script>
}
