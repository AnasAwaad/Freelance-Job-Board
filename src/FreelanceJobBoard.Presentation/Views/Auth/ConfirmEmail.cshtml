@model ConfirmEmailViewModel
@{
    ViewData["Title"] = "Email Confirmation";
}

<div class="d-flex flex-column flex-root" id="kt_app_root">
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <div class="d-flex flex-lg-row-fluid">
            <div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-10 w-100">
                <img class="theme-light-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="~/images/misc/auth-screens.png" alt="" />
                <img class="theme-dark-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="~/images/misc/auth-screens-dark.png" alt="" />
                <h1 class="text-gray-800 fs-2qx fw-bold text-center mb-7">
                    @(Model.IsSuccess ? "Email Confirmed!" : "Confirmation Failed")
                </h1>
                <div class="text-gray-600 fs-base text-center fw-semibold">
                    @Model.Message
                </div>
            </div>
        </div>
        <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
            <div class="bg-body d-flex flex-column flex-center rounded-4 w-md-600px p-10">
                <div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
                    <div class="d-flex flex-center flex-column flex-column-fluid pb-15 pb-lg-20">
                        <div class="text-center mb-11">
                            <div class="symbol symbol-100px mb-7">
                                <div class="symbol-label bg-light-@(Model.IsSuccess ? "success" : "danger")">
                                    @if (Model.IsSuccess)
                                    {
                                        <i class="ki-duotone ki-check text-success fs-2x">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                    }
                                    else
                                    {
                                        <i class="ki-duotone ki-cross text-danger fs-2x">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                    }
                                </div>
                            </div>
                            <h1 class="text-dark fw-bolder mb-3">
                                @(Model.IsSuccess ? "Email Confirmed!" : "Confirmation Failed")
                            </h1>
                            <div class="text-gray-500 fw-semibold fs-6 mb-8">
                                @Model.Message
                            </div>
                        </div>

                        <div class="text-center">
                            @if (Model.IsSuccess)
                            {
                                <a asp-action="Login" class="btn btn-primary mb-3">
                                    Sign In to Your Account
                                </a>
                            }
                            else
                            {
                                <div class="mb-6">
                                    <p class="text-gray-600 fs-6 mb-4">
                                        If you continue to have problems, you can request a new confirmation email.
                                    </p>
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <form asp-action="ResendEmailConfirmation" method="post" class="d-inline">
                                            <input type="hidden" name="email" value="@Model.Email" />
                                            <button type="submit" class="btn btn-light-primary">
                                                Resend Confirmation Email
                                            </button>
                                        </form>
                                    }
                                </div>
                                <a asp-action="Login" class="btn btn-secondary">
                                    Back to Login
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>