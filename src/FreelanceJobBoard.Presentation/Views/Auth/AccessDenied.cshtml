@{
    ViewData["Title"] = "Access Denied";
}

<div class="d-flex flex-column flex-root" id="kt_app_root">
    <div class="d-flex flex-column flex-center flex-column-fluid">
        <div class="d-flex flex-column flex-center text-center p-10">
            <div class="card card-flush w-lg-650px py-5">
                <div class="card-body py-15 py-lg-20">
                    <div class="mb-13">
                        <img src="~/images/illustrations/sketchy-1/18.png" alt="" class="mw-100 mh-300px theme-light-show" />
                        <img src="~/images/illustrations/sketchy-1/18-dark.png" alt="" class="mw-100 mh-300px theme-dark-show" />
                    </div>
                    
                    <h1 class="fw-bolder fs-2hx text-gray-900 mb-4">Access Denied</h1>
                    
                    <div class="fw-semibold fs-6 text-gray-500 mb-7">
                        You don't have permission to access this resource.
                        <br />Please contact your administrator if you believe this is an error.
                    </div>
                    
                    <div class="mb-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-3">
                            Back to Dashboard
                        </a>
                        <a href="javascript:history.back();" class="btn btn-light">
                            Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>