@model FreelanceJobBoard.Presentation.Models.ViewModels.ProposalViewModel
@{
    ViewData["Title"] = "Proposal Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Proposal Details</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-action="MyProposals" class="text-muted text-hover-primary">My Proposals</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Details</li>
                </ul>
            </div>
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                <a asp-action="MyProposals" class="btn btn-sm fw-bold btn-secondary">
                    <i class="ki-duotone ki-arrow-left fs-4"></i>
                    Back to Proposals
                </a>
            </div>
        </div>
    </div>
    <!--end::Toolbar-->

    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-xxl">
            
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <!-- Proposal Details -->
                <div class="col-xl-8">
                    <div class="card mb-8">
                        <div class="card-header">
                            <div class="card-title">
                                <h3 class="fw-bold text-dark">Your Proposal</h3>
                            </div>
                            <div class="card-toolbar">
                                @{
                                    var statusClass = Model.Status switch
                                    {
                                        "Accepted" => "badge-light-success",
                                        "Rejected" => "badge-light-danger",
                                        "UnderReview" => "badge-light-warning",
                                        _ => "badge-light-primary"
                                    };
                                }
                                <span class="badge @statusClass fs-7 fw-bold">@Model.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-8">
                                <h4 class="fs-5 fw-bold text-gray-900 mb-3">Job Information</h4>
                                <div class="d-flex flex-column">
                                    <a asp-controller="Jobs" asp-action="Details" asp-route-id="@Model.JobId" 
                                       class="text-gray-800 fw-bold text-hover-primary fs-6 mb-2">@Model.JobTitle</a>
                                    <span class="text-gray-400 fw-semibold fs-7">Job ID: @Model.JobId</span>
                                </div>
                            </div>

                            <div class="mb-8">
                                <h4 class="fs-5 fw-bold text-gray-900 mb-3">Cover Letter</h4>
                                <div class="text-gray-700 fs-6 bg-light-info p-4 rounded">
                                    @Model.CoverLetter
                                </div>
                            </div>

                            @if (Model.Attachments.Any())
                            {
                                <div class="mb-8">
                                    <h4 class="fs-5 fw-bold text-gray-900 mb-3">Portfolio Files</h4>
                                    <div class="d-flex flex-wrap gap-3">
                                        @foreach (var attachment in Model.Attachments)
                                        {
                                            <div class="d-flex align-items-center bg-light p-3 rounded">
                                                <i class="ki-duotone ki-document fs-2 text-primary me-3">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                </i>
                                                <div class="d-flex flex-column">
                                                    <a href="@attachment.FileUrl" target="_blank" class="text-gray-800 fw-bold text-hover-primary fs-6">
                                                        @attachment.FileName
                                                    </a>
                                                    <span class="text-gray-400 fs-7">
                                                        @(attachment.FileSize / 1024) KB
                                                    </span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.ClientFeedback))
                            {
                                <div class="mb-8">
                                    <h4 class="fs-5 fw-bold text-gray-900 mb-3">Client Feedback</h4>
                                    <div class="alert alert-light-@(Model.Status == "Accepted" ? "success" : "danger")">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="ki-duotone ki-message-text-2 fs-2 me-2">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                                <span class="path3"></span>
                                            </i>
                                            <span class="fw-bold fs-6">Feedback from Client</span>
                                        </div>
                                        <p class="mb-2 text-gray-700">@Model.ClientFeedback</p>
                                        <small class="text-muted">
                                            Received on @Model.ReviewedAt?.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Proposal Summary -->
                <div class="col-xl-4">
                    <div class="card mb-8">
                        <div class="card-header">
                            <div class="card-title">
                                <h3 class="fw-bold text-dark">Proposal Summary</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-stack mb-5">
                                <span class="text-gray-700 fw-bold fs-6">Your Bid:</span>
                                <span class="text-dark fw-bold fs-4">$@Model.BidAmount.ToString("N2")</span>
                            </div>
                            
                            <div class="d-flex flex-stack mb-5">
                                <span class="text-gray-700 fw-bold fs-6">Timeline:</span>
                                <span class="text-dark fw-bold fs-6">@Model.EstimatedTimelineDays days</span>
                            </div>

                            <div class="d-flex flex-stack mb-5">
                                <span class="text-gray-700 fw-bold fs-6">Status:</span>
                                <span class="badge @statusClass">@Model.Status</span>
                            </div>

                            @if (Model.ReviewedAt.HasValue)
                            {
                                <div class="d-flex flex-stack mb-5">
                                    <span class="text-gray-700 fw-bold fs-6">Reviewed:</span>
                                    <span class="text-dark fw-bold fs-6">@Model.ReviewedAt.Value.ToString("MMM dd, yyyy")</span>
                                </div>
                            }

                            <div class="separator my-5"></div>

                            @if (Model.Status == "Submitted" || Model.Status == "Pending")
                            {
                                <div class="d-flex flex-column gap-3">
                                    <div class="alert alert-warning">
                                        <i class="ki-duotone ki-information-5 fs-2 me-2">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                        </i>
                                        Your proposal is pending review by the client.
                                    </div>
                                    
                                    <button type="button" class="btn btn-light-danger btn-sm" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal">
                                        <i class="ki-duotone ki-trash fs-4 me-1"></i>
                                        Delete Proposal
                                    </button>
                                </div>
                            }
                            @if (Model.Status == "Accepted")
                            {
                                <div class="alert alert-success">
                                    <i class="ki-duotone ki-check-circle fs-2 me-2">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                    <strong>Congratulations!</strong> Your proposal has been accepted.
                                </div>
                            }
                            @if (Model.Status == "Rejected")
                            {
                                <div class="alert alert-light-danger">
                                    <i class="ki-duotone ki-cross-circle fs-2 me-2">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                    Unfortunately, your proposal was not selected for this job.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Job Information Card -->
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">
                                <h3 class="fw-bold text-dark">Job Details</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            @if (Model.JobBudgetMin > 0 && Model.JobBudgetMax > 0)
                            {
                                <div class="d-flex flex-stack mb-3">
                                    <span class="text-gray-700 fw-semibold fs-6">Budget:</span>
                                    <span class="text-dark fw-bold fs-6">$@Model.JobBudgetMin.ToString("N0") - $@Model.JobBudgetMax.ToString("N0")</span>
                                </div>
                            }

                            @if (Model.JobDeadline != DateTime.MinValue)
                            {
                                <div class="d-flex flex-stack mb-3">
                                    <span class="text-gray-700 fw-semibold fs-6">Deadline:</span>
                                    <span class="text-dark fw-bold fs-6">@Model.JobDeadline.ToString("MMM dd, yyyy")</span>
                                </div>
                            }

                            <div class="d-flex flex-column">
                                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@Model.JobId" 
                                   class="btn btn-light-primary btn-sm">
                                    <i class="ki-duotone ki-eye fs-4 me-1">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                    </i>
                                    View Job Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Content-->
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Proposal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete your proposal for "<strong>@Model.JobTitle</strong>"?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="ki-duotone ki-trash fs-4"></i>
                        Delete Proposal
                    </button>
                </form>
            </div>
        </div>
    </div>
}