@model List<FreelanceJobBoard.Presentation.Models.ViewModels.ProposalViewModel>
@{
    ViewData["Title"] = "My Proposals";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">My Proposals</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">My Proposals</li>
                </ul>
            </div>
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                <a asp-controller="Jobs" asp-action="Index" class="btn btn-sm fw-bold btn-primary">
                    <i class="ki-duotone ki-plus fs-4"></i>
                    Browse Jobs
                </a>
            </div>
        </div>
    </div>
    <!--end::Toolbar-->

    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-xxl">
            
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!--begin::Card-->
            <div class="card">
                <!--begin::Card header-->
                <div class="card-header border-0 pt-6">
                    <div class="card-title">
                        <div class="d-flex align-items-center position-relative my-1">
                            <h3 class="fw-bold">All Proposals (@Model.Count)</h3>
                        </div>
                    </div>
                    <div class="card-toolbar">
                        <div class="d-flex justify-content-end">
                            @{
                                var pendingCount = Model.Count(p => p.Status == "Submitted" || p.Status == "Pending" || p.Status == "UnderReview");
                                var acceptedCount = Model.Count(p => p.Status == "Accepted");
                                var rejectedCount = Model.Count(p => p.Status == "Rejected");
                            }
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-light-primary">Pending (@pendingCount)</button>
                                <button class="btn btn-sm btn-light-success">Accepted (@acceptedCount)</button>
                                <button class="btn btn-sm btn-light-danger">Rejected (@rejectedCount)</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Card header-->

                <!--begin::Card body-->
                <div class="card-body py-4">
                    @if (Model.Any())
                    {
                        <!--begin::Table-->
                        <div class="table-responsive">
                            <table class="table table-rounded table-striped border gy-7 gs-7">
                                <thead>
                                    <tr class="fw-semibold fs-6 text-gray-800 border-bottom-2 border-gray-200">
                                        <th>Job</th>
                                        <th>Bid Amount</th>
                                        <th>Timeline</th>
                                        <th>Status</th>
                                        <th>Submitted</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var proposal in Model.OrderByDescending(p => p.Id))
                                    {
                                        var statusClass = proposal.Status switch
                                        {
                                            "Accepted" => "badge-light-success",
                                            "Rejected" => "badge-light-danger",
                                            "UnderReview" => "badge-light-warning",
                                            _ => "badge-light-primary"
                                        };
                                        
                                        <tr>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <a asp-controller="Jobs" asp-action="Details" asp-route-id="@proposal.JobId" 
                                                       class="text-gray-800 fw-bold text-hover-primary fs-6">@proposal.JobTitle</a>
                                                    <span class="text-gray-400 fw-semibold fs-7">ID: @proposal.JobId</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-gray-800 fw-bold">$@proposal.BidAmount.ToString("N2")</span>
                                            </td>
                                            <td>
                                                <span class="text-gray-600 fw-semibold">@proposal.EstimatedTimelineDays days</span>
                                            </td>
                                            <td>
                                                <span class="badge @statusClass">@proposal.Status</span>
                                            </td>
                                            <td>
                                                <span class="text-gray-600 fw-semibold">
                                                    @{
                                                        // Assuming CreatedAt would be available in a full implementation
                                                        var submittedDate = DateTime.Now.AddDays(-new Random().Next(1, 30));
                                                    }
                                                    @submittedDate.ToString("MMM dd, yyyy")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <a asp-action="Details" asp-route-id="@proposal.Id" 
                                                       class="btn btn-sm btn-light-primary">
                                                        <i class="ki-duotone ki-eye fs-4"></i>
                                                        View
                                                    </a>
                                                    
                                                    @if (proposal.Status == "Submitted" || proposal.Status == "Pending")
                                                    {
                                                        <button type="button" class="btn btn-sm btn-light-danger" 
                                                                data-bs-toggle="modal" 
                                                                data-bs-target="#deleteModal" 
                                                                data-proposal-id="@proposal.Id"
                                                                data-job-title="@proposal.JobTitle">
                                                            <i class="ki-duotone ki-trash fs-4"></i>
                                                            Delete
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!--end::Table-->
                    }
                    else
                    {
                        <div class="text-center py-10">
                            <div class="mb-7">
                                <i class="ki-duotone ki-questionnaire-tablet fs-3x text-gray-400">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                            </div>
                            <h3 class="text-gray-600 fw-semibold mb-2">No Proposals Found</h3>
                            <p class="text-gray-400 mb-5">You haven't submitted any proposals yet.</p>
                            <a asp-controller="Jobs" asp-action="Index" class="btn btn-primary">
                                <i class="ki-duotone ki-plus fs-4 me-1">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                                Browse Jobs
                            </a>
                        </div>
                    }
                </div>
                <!--end::Card body-->
            </div>
            <!--end::Card-->
        </div>
    </div>
    <!--end::Content-->
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Proposal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete your proposal for "<strong id="deleteJobTitle"></strong>"?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" id="deleteProposalId" name="id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="ki-duotone ki-trash fs-4"></i>
                        Delete Proposal
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle delete modal
            document.getElementById('deleteModal').addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const proposalId = button.getAttribute('data-proposal-id');
                const jobTitle = button.getAttribute('data-job-title');
                
                document.getElementById('deleteProposalId').value = proposalId;
                document.getElementById('deleteJobTitle').textContent = jobTitle;
            });
        });
    </script>
}}