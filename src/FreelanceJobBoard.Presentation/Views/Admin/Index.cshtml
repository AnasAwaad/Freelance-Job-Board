@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Admin Dashboard</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Admin Dashboard</li>
                </ul>
            </div>
        </div>
    </div>
    <!--end::Toolbar-->

    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-xxl">
            
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!--begin::Row-->
            <div class="row g-5 g-xl-10 mb-5 mb-xl-10">
                <!--begin::Col-->
                <div class="col-md-6 col-lg-6 col-xl-6 col-xxl-3 mb-md-5 mb-xl-10">
                    <!--begin::Card widget 20-->
                    <div class="card card-flush bgi-no-repeat bgi-size-contain bgi-position-x-end h-md-50 mb-5 mb-xl-10" style="background-color: #F1416C;background-image:url('assets/media/patterns/vector-1.png')">
                        <!--begin::Header-->
                        <div class="card-header pt-5">
                            <!--begin::Title-->
                            <div class="card-title d-flex flex-column">
                                <!--begin::Amount-->
                                <span class="fs-2hx fw-bold text-white me-2 lh-1 ls-n2">@(ViewBag.TotalUsers ?? 0)</span>
                                <!--end::Amount-->
                                <!--begin::Subtitle-->
                                <span class="text-white opacity-75 pt-1 fw-semibold fs-6">Total Users</span>
                                <!--end::Subtitle-->
                            </div>
                            <!--end::Title-->
                        </div>
                        <!--end::Header-->
                        <!--begin::Card body-->
                        <div class="card-body d-flex align-items-end pt-0">
                            <!--begin::Progress-->
                            <div class="d-flex align-items-center flex-column mt-3 w-100">
                                <div class="d-flex justify-content-between fw-bold fs-6 text-white opacity-75 w-100 mt-auto mb-2">
                                    <span>@(ViewBag.TotalFreelancers ?? 0) Freelancers</span>
                                    <span>@(ViewBag.TotalClients ?? 0) Clients</span>
                                </div>
                                <!--begin::Progress-->
                                <div class="h-8px mx-3 w-100 bg-white bg-opacity-50 rounded">
                                    <div class="bg-white rounded h-8px" role="progressbar" style="width: @(ViewBag.FreelancerPercentage ?? 50)%;" aria-valuenow="@(ViewBag.FreelancerPercentage ?? 50)" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <!--end::Progress-->
                            </div>
                            <!--end::Progress-->
                        </div>
                        <!--end::Card body-->
                    </div>
                    <!--end::Card widget 20-->
                </div>
                <!--end::Col-->
                
                <!--begin::Col-->
                <div class="col-md-6 col-lg-6 col-xl-6 col-xxl-3 mb-md-5 mb-xl-10">
                    <!--begin::Card widget 7-->
                    <div class="card card-flush h-md-50 mb-5 mb-xl-10">
                        <!--begin::Header-->
                        <div class="card-header pt-5">
                            <!--begin::Title-->
                            <div class="card-title d-flex flex-column">
                                <!--begin::Amount-->
                                <span class="fs-2hx fw-bold text-dark me-2 lh-1 ls-n2">@(ViewBag.TotalJobs ?? 0)</span>
                                <!--end::Amount-->
                                <!--begin::Subtitle-->
                                <span class="text-gray-400 pt-1 fw-semibold fs-6">Total Jobs</span>
                                <!--end::Subtitle-->
                            </div>
                            <!--end::Title-->
                        </div>
                        <!--end::Header-->
                        <!--begin::Card body-->
                        <div class="card-body d-flex flex-column justify-content-end pe-0">
                            <!--begin::Title-->
                            <span class="fs-6 fw-bolder text-gray-800 d-block mb-2">Recent Active Users</span>
                            <!--end::Title-->
                            <!--begin::Users group-->
                            <div class="symbol-group symbol-hover flex-nowrap">
                                @if (ViewBag.RecentActiveUsers != null && ((IEnumerable<dynamic>)ViewBag.RecentActiveUsers).Any())
                                {
                                    @foreach (var user in ((IEnumerable<dynamic>)ViewBag.RecentActiveUsers).Take(6))
                                    {
                                        <div class="symbol symbol-35px symbol-circle" data-bs-toggle="tooltip" title="@user.FullName">
                                            @if (!string.IsNullOrEmpty(user.ProfileImageUrl))
                                            {
                                                <img alt="Profile" src="@user.ProfileImageUrl" />
                                            }
                                            else
                                            {
                                                <span class="symbol-label bg-primary text-inverse-primary fw-bold">@user.FullName?.Substring(0, 1).ToUpper()</span>
                                            }
                                        </div>
                                    }
                                    @if (((IEnumerable<dynamic>)ViewBag.RecentActiveUsers).Count() > 6)
                                    {
                                        <div class="symbol symbol-35px symbol-circle">
                                            <span class="symbol-label bg-light text-gray-400 fs-8 fw-bold">+@(((IEnumerable<dynamic>)ViewBag.RecentActiveUsers).Count() - 6)</span>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="symbol symbol-35px symbol-circle">
                                        <span class="symbol-label bg-light text-gray-400 fs-8 fw-bold">No users</span>
                                    </div>
                                }
                            </div>
                            <!--end::Users group-->
                        </div>
                        <!--end::Card body-->
                    </div>
                    <!--end::Card widget 7-->
                </div>
                <!--end::Col-->

                <!--begin::Col-->
                <div class="col-md-6 col-lg-6 col-xl-6 col-xxl-3 mb-md-5 mb-xl-10">
                    <!--begin::Card widget 17-->
                    <div class="card card-flush h-md-50 mb-xl-10">
                        <!--begin::Header-->
                        <div class="card-header pt-5">
                            <!--begin::Title-->
                            <div class="card-title d-flex flex-column">
                                <!--begin::Amount-->
                                <span class="fs-2hx fw-bold text-dark me-2 lh-1 ls-n2">$@(((decimal?)ViewBag.TotalRevenue ?? 0).ToString("N0"))</span>
                                <!--end::Amount-->
                                <!--begin::Subtitle-->
                                <span class="text-gray-400 pt-1 fw-semibold fs-6">Platform Revenue</span>
                                <!--end::Subtitle-->
                            </div>
                            <!--end::Title-->
                        </div>
                        <!--end::Header-->
                        <!--begin::Card body-->
                        <div class="card-body d-flex flex-column justify-content-end pe-0">
                            <!--begin::Title-->
                            <span class="fs-6 fw-bolder text-gray-800 d-block mb-2">Contract Performance</span>
                            <!--end::Title-->
                            <!--begin::Users group-->
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="d-flex align-items-center me-5 me-xl-13">
                                    <div class="symbol symbol-30px symbol-circle me-3">
                                        <span class="symbol-label" style="background: #E8FFF3; color: #50CD89">
                                            <i class="ki-duotone ki-arrow-up fs-5">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                        </span>
                                    </div>
                                    <div class="m-0">
                                        <span class="fw-bolder text-gray-800 d-block fs-7">@(ViewBag.CompletedContracts ?? 0)</span>
                                        <span class="text-gray-400 fw-bold fs-8">Completed</span>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-30px symbol-circle me-3">
                                        <span class="symbol-label" style="background: #FFF5F8; color: #F1416C">
                                            <i class="ki-duotone ki-arrow-down fs-5">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                        </span>
                                    </div>
                                    <div class="m-0">
                                        <span class="fw-bolder text-gray-800 d-block fs-7">@(ViewBag.PendingContracts ?? 0)</span>
                                        <span class="text-gray-400 fw-bold fs-8">Pending</span>
                                    </div>
                                </div>
                            </div>
                            <!--end::Users group-->
                        </div>
                        <!--end::Card body-->
                    </div>
                    <!--end::Card widget 17-->
                </div>
                <!--end::Col-->

                <!--begin::Col-->
                <div class="col-md-6 col-lg-6 col-xl-6 col-xxl-3 mb-md-5 mb-xl-10">
                    <!--begin::Card widget 20-->
                    <div class="card card-flush bgi-no-repeat bgi-size-contain bgi-position-x-end h-md-50 mb-5 mb-xl-10" style="background-color: #7239EA;background-image:url('assets/media/patterns/vector-1.png')">
                        <!--begin::Header-->
                        <div class="card-header pt-5">
                            <!--begin::Title-->
                            <div class="card-title d-flex flex-column">
                                <!--begin::Amount-->
                                <span class="fs-2hx fw-bold text-white me-2 lh-1 ls-n2">@(ViewBag.ActiveProjects ?? 0)</span>
                                <!--end::Amount-->
                                <!--begin::Subtitle-->
                                <span class="text-white opacity-75 pt-1 fw-semibold fs-6">Active Projects</span>
                                <!--end::Subtitle-->
                            </div>
                            <!--end::Title-->
                        </div>
                        <!--end::Header-->
                        <!--begin::Card body-->
                        <div class="card-body d-flex align-items-end pt-0">
                            <!--begin::Progress-->
                            <div class="d-flex align-items-center flex-column mt-3 w-100">
                                <div class="d-flex justify-content-between fw-bold fs-6 text-white opacity-75 w-100 mt-auto mb-2">
                                    <span>@(ViewBag.JobsPendingApproval ?? 0) Pending Approval</span>
                                    <span>@(ViewBag.CompletedContracts ?? 0) Completed</span>
                                </div>
                                <!--begin::Progress-->
                                <div class="h-8px mx-3 w-100 bg-white bg-opacity-50 rounded">
                                    <div class="bg-white rounded h-8px" role="progressbar" style="width: @(ViewBag.ProjectProgressPercentage ?? 0)%;" aria-valuenow="@(ViewBag.ProjectProgressPercentage ?? 0)" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <!--end::Progress-->
                            </div>
                            <!--end::Progress-->
                        </div>
                        <!--end::Card body-->
                    </div>
                    <!--end::Card widget 20-->
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->

            <!--begin::Row-->
            <div class="row g-5 g-xl-10 mb-5 mb-xl-10">
                <!--begin::Col-->
                <div class="col-xl-6">
                    <!--begin::Chart-->
                    <div class="card card-flush h-xl-100">
                        <!--begin::Header-->
                        <div class="card-header pt-5">
                            <!--begin::Title-->
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label fw-bold text-dark">Quick Actions</span>
                                <span class="text-gray-400 mt-1 fw-semibold fs-6">Administrative tools and shortcuts</span>
                            </h3>
                            <!--end::Title-->
                        </div>
                        <!--end::Header-->
                        <!--begin::Body-->
                        <div class="card-body pt-6">
                            <div class="row g-5">
                                <div class="col-6">
                                    <a asp-controller="Categories" asp-action="Index" class="btn btn-light-primary w-100 h-100 d-flex flex-column justify-content-center">
                                        <i class="ki-duotone ki-category fs-1 mb-3">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                            <span class="path4"></span>
                                        </i>
                                        <span class="fw-semibold">Manage Categories</span>
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a asp-controller="Skills" asp-action="Index" class="btn btn-light-info w-100 h-100 d-flex flex-column justify-content-center">
                                        <i class="ki-duotone ki-code fs-1 mb-3">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                            <span class="path4"></span>
                                        </i>
                                        <span class="fw-semibold">Manage Skills</span>
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a asp-controller="Jobs" asp-action="Index" class="btn btn-light-success w-100 h-100 d-flex flex-column justify-content-center">
                                        <i class="ki-duotone ki-briefcase fs-1 mb-3">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                        <span class="fw-semibold">All Jobs</span>
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a asp-controller="Admin" asp-action="JobManagement" class="btn btn-light-warning w-100 h-100 d-flex flex-column justify-content-center">
                                        <i class="ki-duotone ki-questionnaire-tablet fs-1 mb-3">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                        <span class="fw-semibold">Job Approvals</span>
                                        @if ((ViewBag.JobsPendingApproval ?? 0) > 0)
                                        {
                                            <small class="text-muted">@(ViewBag.JobsPendingApproval) pending</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">No pending jobs</small>
                                        }
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a href="#" class="btn btn-light-danger w-100 h-100 d-flex flex-column justify-content-center">
                                        <i class="ki-duotone ki-people fs-1 mb-3">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                            <span class="path4"></span>
                                            <span class="path5"></span>
                                        </i>
                                        <span class="fw-semibold">User Management</span>
                                        <small class="text-muted">@(ViewBag.TotalUsers ?? 0) total users</small>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!--end::Body-->
                    </div>
                    <!--end::Chart-->
                </div>
                <!--end::Col-->

                <!--begin::Col-->
                <div class="col-xl-6">
                    <!--begin::Authentication Info-->
                    <div class="card card-flush h-xl-100">
                        <!--begin::Header-->
                        <div class="card-header pt-5">
                            <!--begin::Title-->
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label fw-bold text-dark">System Overview</span>
                                <span class="text-gray-400 mt-1 fw-semibold fs-6">Platform performance metrics</span>
                            </h3>
                            <!--end::Title-->
                        </div>
                        <!--end::Header-->
                        <!--begin::Body-->
                        <div class="card-body pt-6">
                            <div class="table-responsive">
                                <table class="table table-row-dashed align-middle gs-0 gy-4 my-0">
                                    <tbody>
                                        <tr>
                                            <td class="fs-6 fw-bold text-gray-800">Admin Email:</td>
                                            <td class="text-end">
                                                <span class="badge badge-light-primary">@(ViewBag.UserEmail ?? "Not Available")</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fs-6 fw-bold text-gray-800">Admin Role:</td>
                                            <td class="text-end">
                                                <span class="badge badge-light-success">@(ViewBag.UserRole ?? "Not Available")</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fs-6 fw-bold text-gray-800">Total Revenue:</td>
                                            <td class="text-end">
                                                <span class="text-success fw-bold">$@(((decimal?)ViewBag.TotalRevenue ?? 0).ToString("N2"))</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fs-6 fw-bold text-gray-800">Monthly Average:</td>
                                            <td class="text-end">
                                                <span class="text-primary fw-bold">$@(((decimal?)ViewBag.MonthlyRevenue ?? 0).ToString("N2"))</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fs-6 fw-bold text-gray-800">Avg. Job Approval:</td>
                                            <td class="text-end">
                                                <span class="text-info fw-bold">@(((double?)ViewBag.AverageJobApprovalTime ?? 24).ToString("F1")) hours</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fs-6 fw-bold text-gray-800">System Status:</td>
                                            <td class="text-end">
                                                <span class="badge badge-light-success">
                                                    <i class="ki-duotone ki-check fs-7 me-1">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                    </i>
                                                    Online
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fs-6 fw-bold text-gray-800">Last Updated:</td>
                                            <td class="text-end">
                                                <span class="text-gray-600">@DateTime.Now.ToString("MMM dd, yyyy HH:mm")</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="separator my-5"></div>
                            <div class="d-flex flex-column">
                                <h5 class="mb-4">Platform Health Metrics:</h5>
                                <div class="row g-3">
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-30px me-3">
                                                <span class="symbol-label bg-light-success text-success">
                                                    <i class="ki-duotone ki-people fs-6"></i>
                                                </span>
                                            </div>
                                            <div>
                                                <div class="fs-7 fw-bold text-gray-800">@(ViewBag.TotalUsers ?? 0)</div>
                                                <div class="fs-8 text-gray-400">Total Users</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-30px me-3">
                                                <span class="symbol-label bg-light-primary text-primary">
                                                    <i class="ki-duotone ki-briefcase fs-6"></i>
                                                </span>
                                            </div>
                                            <div>
                                                <div class="fs-7 fw-bold text-gray-800">@(ViewBag.TotalJobs ?? 0)</div>
                                                <div class="fs-8 text-gray-400">Total Jobs</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-30px me-3">
                                                <span class="symbol-label bg-light-warning text-warning">
                                                    <i class="ki-duotone ki-handshake fs-6"></i>
                                                </span>
                                            </div>
                                            <div>
                                                <div class="fs-7 fw-bold text-gray-800">@(ViewBag.ActiveProjects ?? 0)</div>
                                                <div class="fs-8 text-gray-400">Active Projects</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-30px me-3">
                                                <span class="symbol-label bg-light-danger text-danger">
                                                    <i class="ki-duotone ki-notification-bing fs-6"></i>
                                                </span>
                                            </div>
                                            <div>
                                                <div class="fs-7 fw-bold text-gray-800">@(ViewBag.JobsPendingApproval ?? 0)</div>
                                                <div class="fs-8 text-gray-400">Pending Approvals</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--end::Body-->
                    </div>
                    <!--end::Authentication Info-->
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
        </div>
    </div>
    <!--end::Content-->
</div>