<section class="hero-section">
    <div class="content-container">
        <p class="label">#1 Online Marketplace</p>
        <h1 class="main-title">Find the talents for any job.</h1>
        <p class="subtitle">
            Unlock your potential with quality job & earn from world leading brands & co.
        </p>
        
        @if (User.IsInRole(AppRoles.Client))
        {
            <a asp-controller="Jobs" asp-action="Create" class="post-job-btn">Post a Job</a>
        }
        else if (User.IsInRole(AppRoles.Freelancer))
        {
            <a asp-controller="Jobs" asp-action="Index" class="post-job-btn">Browse Jobs</a>
        }
        else if (User.IsInRole(AppRoles.Admin))
        {
            <a asp-controller="Admin" asp-action="Index" class="post-job-btn">Admin Panel</a>
        }
        else if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Auth" asp-action="Register" class="post-job-btn">Join Now</a>
        }
        else
        {
            <a asp-controller="Jobs" asp-action="Index" class="post-job-btn">Browse Jobs</a>
        }
        
    </div>
    <div class="illustration-container">
        <img src="~/images/flat-employment-agency-search-new-employees-hire.png" alt="Person working on a laptop">
    </div>
    
</section>

