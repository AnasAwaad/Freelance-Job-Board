@using System.Security.Claims
@model FreelanceJobBoard.Presentation.Models.ViewModels.CreateJobViewModel

@{
    ViewData["Title"] = "Create Job";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex flex-column flex-column-fluid">
    <!-- Toolbar and Breadcrumb omitted for brevity -->
    <!-- Content -->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title fs-3 fw-bold">Job Details</div>
                        </div>
                        <div class="card-body">
                            <form asp-action="Create" method="post" novalidate>
                                <div class="row mb-8">
                                    <div class="col-xl-12">
                                        <div class="fv-row mb-8">
                                            <label asp-for="Title" class="fs-6 fw-semibold mb-2">Job Title</label>
                                            <input asp-for="Title" class="form-control form-control-solid" placeholder="Enter job title" />
                                            <span asp-validation-for="Title" class="text-danger fs-7"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-8">
                                    <div class="col-xl-12">
                                        <div class="fv-row mb-8">
                                            <label asp-for="Description" class="fs-6 fw-semibold mb-2">Description</label>
                                            <textarea asp-for="Description" class="form-control form-control-solid" rows="6" placeholder="Describe the job requirements, expectations, and deliverables..."></textarea>
                                            <span asp-validation-for="Description" class="text-danger fs-7"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-8">
                                    <div class="col-xl-6">
                                        <div class="fv-row mb-8">
                                            <label asp-for="BudgetMin" class="fs-6 fw-semibold mb-2">Minimum Budget ($)</label>
                                            <input asp-for="BudgetMin" type="number" step="0.01" class="form-control form-control-solid" placeholder="0.00" />
                                            <span asp-validation-for="BudgetMin" class="text-danger fs-7"></span>
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="fv-row mb-8">
                                            <label asp-for="BudgetMax" class="fs-6 fw-semibold mb-2">Maximum Budget ($)</label>
                                            <input asp-for="BudgetMax" type="number" step="0.01" class="form-control form-control-solid" placeholder="0.00" />
                                            <span asp-validation-for="BudgetMax" class="text-danger fs-7"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-8">
                                    <div class="col-xl-6">
                                        <div class="fv-row mb-8">
                                            <label asp-for="Deadline" class="fs-6 fw-semibold mb-2">Deadline</label>
                                            <input asp-for="Deadline" type="date" class="form-control form-control-solid" />
                                            <span asp-validation-for="Deadline" class="text-danger fs-7"></span>
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="fv-row mb-8">
                                            <label asp-for="Tags" class="fs-6 fw-semibold mb-2">Tags</label>
                                            <input asp-for="Tags" class="form-control form-control-solid" placeholder="web development, design, mobile app" />
                                            <span asp-validation-for="Tags" class="text-danger fs-7"></span>
                                            <div class="form-text">Separate tags with commas</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-8">
                                    <div class="col-xl-6">
                                        <div class="fv-row mb-8">
                                            <label asp-for="CategoryIds" class="fs-6 fw-semibold mb-2">Categories</label>
                                            <select asp-for="CategoryIds" class="form-select form-select-solid" multiple="multiple" data-control="select2" data-placeholder="Select categories">
                                                @if (Model?.AvailableCategories != null)
                                                {
                                                    foreach (var category in Model.AvailableCategories)
                                                    {
                                                        <option value="@category.Id">@category.Name</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="CategoryIds" class="text-danger fs-7"></span>
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="fv-row mb-8">
                                            <label asp-for="SkillIds" class="fs-6 fw-semibold mb-2">Required Skills</label>
                                            <select asp-for="SkillIds" class="form-select form-select-solid" multiple="multiple" data-control="select2" data-placeholder="Select required skills">
                                                @if (Model?.AvailableSkills != null)
                                                {
                                                    foreach (var skill in Model.AvailableSkills)
                                                    {
                                                        <option value="@skill.Id">@skill.Name</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="SkillIds" class="text-danger fs-7"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-end">
                                    <a asp-action="MyJobs" class="btn btn-light me-3">Cancel</a>
                                    <button type="submit" id="createJob" class="btn btn-primary">
                                        <span class="indicator-label">Create Job</span>
                                        <span class="indicator-progress" style="display:none;">
                                            Please wait...
                                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                        </span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Content-->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Initialize Select2 for multi-select dropdowns
            $('[data-control="select2"]').select2({
                placeholder: function () {
                    return $(this).data('placeholder');
                },
                allowClear: true
            });

            var proxyConnection = new signalR.HubConnectionBuilder()
                .withUrl("/notifyHub")
                .build();

            proxyConnection.start()
                .then(() => console.log("SignalR connected"))
                .catch(err => console.error("SignalR connection error:", err));

            $('#createJob').on('click', function (e) {
                e.preventDefault();

                var title = $('#Title').val();
                var description = $('#Description').val();


                proxyConnection.send("SendNotification", "Client@gmail.com", title, description)
                    .then(() => {
                        console.log("Notification sent");
                        // Optionally, submit the form after sending notification
                        $('form').submit();
                    })
                    .catch(function (err) {
                        console.error("Error sending notification:", err.toString());
                    });
            });
        });
    </script>
}
