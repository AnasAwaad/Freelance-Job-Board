@model FreelanceJobBoard.Presentation.Models.ViewModels.JobViewModel
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">@Model.Title</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        @if (User.IsInRole("Client"))
                        {
                            <a asp-action="MyJobs" class="text-muted text-hover-primary">My Jobs</a>
                        }
                        else
                        {
                            <a asp-action="Index" class="text-muted text-hover-primary">Browse Jobs</a>
                        }
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Details</li>
                </ul>
            </div>
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                @if (User.IsInRole("Client") && ViewBag.IsOwner == true)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm fw-bold btn-light-primary">
                        <i class="ki-duotone ki-pencil fs-4"></i>
                        Edit Job
                    </a>
                }
                @if (User.IsInRole("Freelancer") && Model.Status == "Open" && ViewBag.HasFreelancerApplied != true && ViewBag.HasAcceptedProposal != true)
                {
                    <a asp-controller="Proposals" asp-action="Submit" asp-route-jobId="@Model.Id" class="btn btn-sm fw-bold btn-success">
                        <i class="ki-duotone ki-paper-plane fs-4 me-1">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        Apply for Job
                    </a>
                }
                else if (User.IsInRole("Freelancer") && ViewBag.HasFreelancerApplied == true)
                {
                    <span class="btn btn-sm fw-bold btn-light-info disabled">
                        <i class="ki-duotone ki-check fs-4 me-1">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        Already Applied
                    </span>
                }
                else if (User.IsInRole("Freelancer") && ViewBag.HasAcceptedProposal == true)
                {
                    <span class="btn btn-sm fw-bold btn-light-warning disabled">
                        <i class="ki-duotone ki-information fs-4 me-1">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                        </i>
                        Job Assigned
                    </span>
                }
            </div>
        </div>
    </div>
    <!--end::Toolbar-->

    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-fluid">
            
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <!-- Job Details -->
                <div class="col-xl-8">
                    <div class="card mb-8">
                        <div class="card-header">
                            <div class="card-title">
                                <h3 class="fw-bold text-dark">Job Information</h3>
                            </div>
                            <div class="card-toolbar">
                                <span class="badge badge-light-@(Model.Status == "Open" ? "success" : Model.Status == "Cancelled" ? "danger" : "warning") fs-7 fw-bold">
                                    @Model.Status
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            @if (Model.Status == "Pending")
                            {
                                @if (User.IsInRole("Client"))
                                {
                                    <div class="alert alert-warning">
                                        <i class="ki-duotone ki-warning-2 fs-2 me-2">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                        </i>
                                        <strong>Pending Approval:</strong> Your job is currently under review by our admin team. 
                                        Once approved, it will be visible to freelancers and you can start receiving proposals.
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        <i class="ki-duotone ki-information-5 fs-2 me-2">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                        </i>
                                        <strong>Job Under Review:</strong> This job is currently being reviewed by our admin team.
                                    </div>
                                }
                            }
                            else if (Model.Status == "Cancelled")
                            {
                                @if (User.IsInRole("Client"))
                                {
                                    <div class="alert alert-danger">
                                        <i class="ki-duotone ki-cross-circle fs-2 me-2">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                        <strong>Job Rejected:</strong> Your job posting has been rejected. 
                                        Please review any feedback and make necessary changes before resubmitting.
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger">
                                        <i class="ki-duotone ki-cross-circle fs-2 me-2">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                        <strong>Job Unavailable:</strong> This job posting has been cancelled and is no longer accepting proposals.
                                    </div>
                                }
                            }
                            else if (Model.Status == "Open")
                            {
                                @if (User.IsInRole("Client"))
                                {
                                    <div class="alert alert-success">
                                        <i class="ki-duotone ki-check-circle fs-2 me-2">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                        <strong>Job Active:</strong> Your job is now live and visible to freelancers!
                                    </div>
                                }
                                else if (User.IsInRole("Freelancer"))
                                {
                                    @if (ViewBag.HasAcceptedProposal == true)
                                    {
                                        <div class="alert alert-warning">
                                            <i class="ki-duotone ki-shield-tick fs-2 me-2">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                            <strong>Job Assigned:</strong> This job has been assigned to another freelancer.
                                        </div>
                                    }
                                    else if (ViewBag.HasFreelancerApplied == true)
                                    {
                                        <div class="alert alert-info">
                                            <i class="ki-duotone ki-check-circle fs-2 me-2">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                            <strong>Application Submitted:</strong> You have already applied to this job. You can view your proposal in "My Proposals".
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-success">
                                            <i class="ki-duotone ki-check-circle fs-2 me-2">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                            <strong>Job Available:</strong> This job is accepting proposals. Click "Apply for Job" to submit your proposal!
                                        </div>
                                    }
                                }
                                else
                                {
                                    @if (ViewBag.HasAcceptedProposal == true)
                                    {
                                        <div class="alert alert-warning">
                                            <i class="ki-duotone ki-shield-tick fs-2 me-2">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                            <strong>Job Assigned:</strong> This job has been assigned to a freelancer.
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info">
                                            <i class="ki-duotone ki-information-5 fs-2 me-2">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                                <span class="path3"></span>
                                            </i>
                                            <strong>Job Available:</strong> This job is currently accepting proposals from freelancers.
                                        </div>
                                    }
                                }
                            }

                            <div class="mb-8">
                                <h4 class="fs-5 fw-bold text-gray-900 mb-3">Description</h4>
                                <div class="text-gray-700 fs-6">
                                    @Html.Raw(Model.Description?.Replace("\n", "<br>"))
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Tags))
                            {
                                <div class="mb-8">
                                    <h4 class="fs-5 fw-bold text-gray-900 mb-3">Tags</h4>
                                    <div>
                                        @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <span class="badge badge-light-info me-2 mb-2">@tag.Trim()</span>
                                        }
                                    </div>
                                </div>
                            }

                            @if (Model.Categories.Any())
                            {
                                <div class="mb-8">
                                    <h4 class="fs-5 fw-bold text-gray-900 mb-3">Categories</h4>
                                    <div>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <span class="badge badge-light-primary me-2 mb-2">@category.Name</span>
                                        }
                                    </div>
                                </div>
                            }

                            @if (Model.Skills.Any())
                            {
                                <div class="mb-8">
                                    <h4 class="fs-5 fw-bold text-gray-900 mb-3">Required Skills</h4>
                                    <div>
                                        @foreach (var skill in Model.Skills)
                                        {
                                            <span class="badge badge-light-success me-2 mb-2">@skill.Name</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Job Summary -->
                <div class="col-xl-4">
                    <div class="card mb-8">
                        <div class="card-header">
                            <div class="card-title">
                                <h3 class="fw-bold text-dark">Job Summary</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-stack mb-5">
                                <span class="text-gray-700 fw-bold fs-6">Budget Range:</span>
                                <span class="text-dark fw-bold fs-4">$@Model.BudgetMin.ToString("N0") - $@Model.BudgetMax.ToString("N0")</span>
                            </div>
                            
                            <div class="d-flex flex-stack mb-5">
                                <span class="text-gray-700 fw-bold fs-6">Deadline:</span>
                                <span class="text-dark fw-bold fs-6">@Model.Deadline.ToString("MMMM dd, yyyy")</span>
                            </div>

                            <div class="d-flex flex-stack mb-5">
                                <span class="text-gray-700 fw-bold fs-6">Status:</span>
                                <span class="badge badge-light-@(Model.Status == "Open" ? "success" : Model.Status == "Cancelled" ? "danger" : "warning")">
                                    @Model.Status
                                </span>
                            </div>

                            <div class="d-flex flex-stack mb-5">
                                <span class="text-gray-700 fw-bold fs-6">Views:</span>
                                <span class="text-dark fw-bold fs-6">@Model.ViewsCount</span>
                            </div>

                            @if (Model.IsApproved)
                            {
                                <div class="d-flex flex-stack mb-5">
                                    <span class="text-gray-700 fw-bold fs-6">Approval:</span>
                                    <span class="badge badge-light-success">Approved</span>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex flex-stack mb-5">
                                    <span class="text-gray-700 fw-bold fs-6">Approval:</span>
                                    <span class="badge badge-light-warning">Pending</span>
                                </div>
                            }

                            <div class="separator my-5"></div>

                            @* Show different actions based on user role *@
                            @if (User.IsInRole("Client") && ViewBag.IsOwner == true)
                            {
                                <div class="d-flex flex-column gap-3">
                                    <a asp-controller="Jobs" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                                        <i class="ki-duotone ki-pencil fs-4 me-1"></i>
                                        Edit Job
                                    </a>
                                    
                                    <button type="button" class="btn btn-light-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                        <i class="ki-duotone ki-trash fs-4 me-1"></i>
                                        Delete Job
                                    </button>
                                    
                                    @if (Model.Status == "Open")
                                    {
                                        <a asp-controller="Proposals" asp-action="JobProposals" asp-route-jobId="@Model.Id" class="btn btn-success btn-sm">
                                            <i class="ki-duotone ki-questionnaire-tablet fs-4 me-1">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                            View Proposals
                                        </a>
                                    }
                                </div>
                            }
                            else if (User.IsInRole("Freelancer") && Model.Status == "Open")
                            {
                                @if (ViewBag.HasAcceptedProposal == true)
                                {
                                    <div class="d-flex flex-column gap-3">
                                        <span class="btn btn-light-warning disabled">
                                            <i class="ki-duotone ki-shield-tick fs-4 me-1">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                            Job Assigned
                                        </span>
                                        
                                        <div class="alert alert-light-warning">
                                            <i class="ki-duotone ki-information-5 fs-2 me-2">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                                <span class="path3"></span>
                                            </i>
                                            <strong>Job Assigned:</strong> This job has been assigned to another freelancer.
                                        </div>
                                    </div>
                                }
                                else if (ViewBag.HasFreelancerApplied == true)
                                {
                                    <div class="d-flex flex-column gap-3">
                                        <span class="btn btn-light-info disabled">
                                            <i class="ki-duotone ki-check fs-4 me-1">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                            Already Applied
                                        </span>
                                        
                                        <div class="alert alert-light-info">
                                            <i class="ki-duotone ki-information-5 fs-2 me-2">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                                <span class="path3"></span>
                                            </i>
                                            <strong>Application Submitted:</strong> You have already applied to this job. Check "My Proposals" to view your application status.
                                        </div>
                                        
                                        <a asp-controller="Proposals" asp-action="MyProposals" class="btn btn-primary btn-sm">
                                            <i class="ki-duotone ki-questionnaire-tablet fs-4 me-1">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                            View My Proposals
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex flex-column gap-3">
                                        <a asp-controller="Proposals" asp-action="Submit" asp-route-jobId="@Model.Id" class="btn btn-primary">
                                            <i class="ki-duotone ki-paper-plane fs-4 me-1">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                            Apply for Job
                                        </a>
                                        
                                        <div class="alert alert-light-info">
                                            <i class="ki-duotone ki-information-5 fs-2 me-2">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                                <span class="path3"></span>
                                            </i>
                                            <strong>Ready to apply?</strong> Submit your proposal with your best bid and timeline to win this project!
                                        </div>
                                    </div>
                                }
                            }
                            else if (!User.Identity.IsAuthenticated)
                            {
                                <div class="d-flex flex-column gap-3">
                                    <a asp-controller="Auth" asp-action="Register" class="btn btn-primary">
                                        <i class="ki-duotone ki-user-tick fs-4 me-1">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                        </i>
                                        Join as Freelancer
                                    </a>
                                    
                                    <div class="alert alert-light-warning">
                                        <i class="ki-duotone ki-information-5 fs-2 me-2">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                        </i>
                                        <strong>Want to apply?</strong> Create a freelancer account to submit proposals for this job!
                                    </div>
                                </div>
                            }
                            else if (User.IsInRole("Client") && ViewBag.IsOwner != true)
                            {
                                <div class="alert alert-light-info">
                                    <i class="ki-duotone ki-information-5 fs-2 me-2">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                    </i>
                                    <strong>Job Information:</strong> This job belongs to another client. You can view the details but cannot make changes.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Time Information -->
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">
                                <h3 class="fw-bold text-dark">Timeline</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            @{
                                var daysRemaining = (Model.Deadline - DateTime.Now).Days;
                                var timeClass = daysRemaining < 7 ? "text-danger" : daysRemaining < 14 ? "text-warning" : "text-success";
                            }
                            
                            <div class="d-flex flex-stack mb-3">
                                <span class="text-gray-700 fw-bold fs-6">Days Remaining:</span>
                                <span class="fw-bold fs-6 @timeClass">
                                    @(daysRemaining > 0 ? $"{daysRemaining} days" : "Expired")
                                </span>
                            </div>

                            @if (daysRemaining > 0)
                            {
                                <div class="progress h-8px bg-light-primary">
                                    @{
                                        var totalDays = (Model.Deadline - DateTime.Now.AddDays(-30)).Days; // Assume 30 days total
                                        var progress = Math.Max(0, Math.Min(100, (double)(totalDays - daysRemaining) / totalDays * 100));
                                    }
                                    <div class="progress-bar bg-@(daysRemaining < 7 ? "danger" : daysRemaining < 14 ? "warning" : "success")" style="width: @progress%"></div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-light-danger">
                                    <i class="ki-duotone ki-warning-2 fs-2 me-2">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                    </i>
                                    <strong>Deadline Passed:</strong> This job's deadline has expired.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Content-->
</div>

@* Only show delete modal for job owners *@
@if (User.IsInRole("Client") && ViewBag.IsOwner == true)
{
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the job "<strong>@Model.Title</strong>"?</p>
                    <p class="text-danger">This action cannot be undone and will remove all associated proposals.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete Job</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}