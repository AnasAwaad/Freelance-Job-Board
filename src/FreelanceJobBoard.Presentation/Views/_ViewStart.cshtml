@{
	var controller = ViewContext.RouteData.Values["controller"]?.ToString();

	string layout = "";
	if (controller == "Auth" || controller == "Clients" || controller == "Categories")
	{
		layout = "~/Views/Shared/_DashboardLayout.cshtml";
	}
	else
	{
		layout = "~/Views/Shared/_Layout.cshtml";
	}

	Layout = layout;
}
